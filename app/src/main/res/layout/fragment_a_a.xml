<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentAA">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/childFragmentABContainer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/openChildFragmentABBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/openChildFragmentABBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/nameOfFragmentAATextView"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Open AB Fragment" />

    <TextView
        android:id="@+id/nameOfFragmentAATextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/openChildFragmentABBtn"
        app:layout_constraintStart_toStartOf="@id/openChildFragmentABBtn"
        tools:text="Fragment AA" />


</androidx.constraintlayout.widget.ConstraintLayout>